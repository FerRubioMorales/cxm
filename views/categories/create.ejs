<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Categories <small>Manage categories</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Create
            </li>
        </ol>
    </div>
</div>

<div class="col-lg-12">
    <form method="post" class="form-horizontal">

        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input required type="text" name="title" class="form-control" id="title" placeholder="Title">
            </div>
        </div>

        <div class="form-group">
            <label for="urlseo" class="col-sm-2 control-label">URL SEO</label>
            <div class="col-sm-10">
                <input type="text" name="urlseo" required class="form-control" id="urlseo" placeholder="URL SEO">
            </div>
        </div>

        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="description" id="description" placeholder="Description">
            </div>
        </div>

        <div class="form-group">
            <label for="parent" class="col-sm-2 control-label">Parent</label>
            <div class="col-sm-10">

                <select id="parent" class="form-control" name="parent">
                    <% categories.forEach(function (cat) { %>
                    <option value="<%= cat.id %>"><%= cat.title %></option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input name="navigation" type="checkbox"> Navigation
                    </label>
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a id="save" class="btn btn-default">Save</a>
            </div>
        </div>
    </form>

</div>